<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_product"
    app:startDestination="@id/showProductsRV">

    <fragment
        android:id="@+id/showProductsRV"

        android:name="com.example.productformretrofit.ShowProductsRV"
        android:label="Products"
        tools:layout="@layout/fragment_show_products_r_v"
        >
        <action
            android:id="@+id/action_showProductsRV_to_shoewDetailsProduct"
            app:destination="@id/shoewDetailsProduct"
            />
    </fragment>
    <fragment
        android:id="@+id/shoewDetailsProduct"
        android:name="com.example.productformretrofit.ShowDetailsProduct"
        android:label="Product Details"
        tools:layout="@layout/fragment_shoew_details_product">

        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>

</navigation>